<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/button_material_light"
    android:id="@+id/popupLayout">

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="5"
        android:id = "@+id/tIntervalSeekBar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textInterval"
        android:layout_alignRight="@id/tIntervalSeekBar"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of video"
        android:textSize="12sp"
        android:layout_below="@+id/tIntervalSeekBar"
        android:id = "@+id/videoName"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select music S/E"
        android:id="@+id/captionmusic"
        android:layout_below="@id/videoName"
        android:layout_marginTop="5dp"/>

    <zetbrush.com.generatingmain.RangeSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rangeSeekbar"
        android:layout_below="@id/captionmusic"

        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FadeIn"
        android:id="@+id/switchFade"
        android:layout_below="@+id/videoName"
        android:layout_alignRight="@+id/textInterval"
        android:layout_alignEnd="@+id/textInterval" />Range


</RelativeLayout>