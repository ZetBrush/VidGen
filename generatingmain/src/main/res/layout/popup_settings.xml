<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/button_material_light"
    android:id="@+id/popupLayout">

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="5"
        android:id = "@+id/tIntervalSeekBar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textInterval"
        android:layout_alignRight="@id/tIntervalSeekBar"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of video"
        android:textSize="12sp"
        android:layout_below="@+id/tIntervalSeekBar"
        android:id = "@+id/videoName"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select music S/E"
        android:id="@+id/captionmusic"
        android:layout_below="@+id/scrollpicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <zetbrush.com.generatingmain.RangeSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rangeSeekbar"
        android:layout_below="@id/scrollpicker"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FX"
        android:id="@+id/fxx"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/scrollpicker"
        android:layout_toStartOf="@+id/scrollpicker"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />
<zetbrush.com.view.ScrollPickerView
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:layout_below="@+id/videoName"
    android:layout_alignRight="@+id/textInterval"
    android:layout_alignEnd="@+id/textInterval"
    android:id="@+id/scrollpicker"

    />




</RelativeLayout>